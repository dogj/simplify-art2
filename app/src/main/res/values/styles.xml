<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

     <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Toolbar">
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="subtitleTextColor">@color/colorWhite</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="ToolbarTheme">
        <item name="actionMenuTextColor">@color/album_FontLight</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent.ContentCenter">
        <item name="android:gravity">center</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.ContentCenter">
        <item name="android:gravity">center</item>
    </style>

    <style name="WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContent.WidthMatchParent.ContentCenter">
        <item name="android:gravity">center</item>
    </style>

    <style name="WrapContent.HeightMatchParent">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent.HeightMatchParent.ContentCenter">
        <item name="android:gravity">center</item>
    </style>

    <style name="WrapContent.CenterHorizontal">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="WrapContent.CenterInParent">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.Button"/>

    <style name="AppTheme.Button.Primary">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Button.Primary">
        <item name="android:theme">@style/AppTheme.Button.Primary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Primary.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Primary.WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
